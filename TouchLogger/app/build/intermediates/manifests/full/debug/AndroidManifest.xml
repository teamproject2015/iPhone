<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.unimannheim.touchlogger"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.unimannheim.touchlogger.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.unimannheim.touchlogger.KeyboardActivity"
            android:label="@string/title_activity_keyboard"
            android:launchMode="singleInstance"
            android:parentActivityName="de.unimannheim.touchlogger.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="de.unimannheim.touchlogger.AboutActivity"
            android:label="@string/title_aboutActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme" />
        <activity
            android:name="de.unimannheim.touchlogger.BaseActivity"
            android:label="@string/title_baseActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme" />
    </application>

</manifest>