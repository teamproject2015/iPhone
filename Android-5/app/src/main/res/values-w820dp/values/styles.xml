<resources>

   <!-- &lt;!&ndash; Base application theme. &ndash;&gt;
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
    </style>
    -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="android:windowContentOverlay">@drawable/toolbar_dropshadow</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="titleTextStyle">@color/textoricons</item>
    <!-- The rest of your attributes -->
    </style>

    <style name="AppTheme_light" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowContentOverlay">@drawable/toolbar_dropshadow</item>
        <item name="android:foreground">?android:windowContentOverlay</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <!-- The rest of your attributes -->
    </style>



</resources>
