<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.unimannheim.loggingapp.AboutActivity">


    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/textView_AboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="83dp"
        android:text="@string/About_us"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/textView_furtherInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_AboutUs"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_purple"
        android:text="www.uni-mannheim.de"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_furtherInformation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:text="@string/copyright"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

</RelativeLayout>
